page{
  width: 100%;
  height: 100%;
}
.nav-container {
  width: 100%;
  height: 90rpx;
  position: relative;
  border-bottom: 1rpx solid #e8e8e8;
  overflow: hidden;
}
/* 移动端产生1px的线 */
.nav-container::after {
  content: "";
  position: absolute;
  width: 200%;
  height: 200%;
  top: 0;
  left: 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.7);
  transform: scale(0.5);
  transform-origin: 0 0;
}
.nav-container .nav-search {
  padding: 27rpx 28rpx 15rpx;
  float: left;
}
.nav-container .nav-tabbar {
  float: left;
  height: 90rpx;
  min-width: 464rpx;
  position: relative;
}
.nav-container .nav-userBox{
  float: left;
  z-index: 222;
  padding: 24rpx 25rpx 14rpx 23rpx;
  /* box-shadow: -6rpx 0 4rpx 1rpx rgba(105, 105, 105, .8); */
  position: relative;
}
/* 移动端0.5px像素 */
.nav-container .nav-userBox::after {
  content: "";
  position: absolute;
  width: 200%;
  height: 200%;
  top: 0;
  left: 0;
  border-left: 1rpx solid #e8e8e8;
  transform: scale(0.5);
  transform-origin: 0 0;
}

